html,
body,
ul,
ol,
h1,
h2,
h3,
h4,
h5,
h6
  margin 0
  padding 0

#<%= packageName %>
  h1 // 模块标题
    font-size 24px

  h2 // 一级标题
    font-size 22px

  h3 // 二级标题
    font-size 16

  ul,
  ol,
  li
    list-style none

  a
    outline none
    cursor pointer
    color #3F87FF
  a,
  ins,
  s,
  u,
  del
    border none
    text-decoration none

  textarea {
    min-height 60px
  }


  .USN{
    user-select none
  }

  .oh
    overflow hidden
  .lf
    float left
  .rf
    float right
  .cb
    clear both

  .ct
    text-align center
  .rt
    text-align right
  .lt
    text-align left

  .pr{
    position relative
  }

  .pa{
    position absolute
  }

  .cp{
    cursor pointer
  }
  .ell
    overflow hidden !important
    white-space nowrap !important
    text-overflow ellipsis !important
    word-break normal !important
  .ctd
    position: absolute
    transform translate(50%, 50%)
    margin-top -50%
    margin-top -50%

  /* 滚动条 */
  ::-webkit-scrollbar
    width 9px
    height 9px

  /* 滚动槽 */
  ::-webkit-scrollbar-track
    -webkit-box-shadow #dddddd
    border-radius 10px

  /* 滚动条滑块 */
  ::-webkit-scrollbar-thumb
    border-radius 10px
    background-color #dddddd
    -webkit-box-shadow #dddddd

  ::-webkit-scrollbar-thumb:window-inactive
    background-color #dddddd

  distance = 4 6 8 10 15 18 20 30 40
  direction = t top, r right, b bottom, l left
  for num in distance
    for dir in direction
      .m{dir[0]}{num}
        margin-{dir[1]}: 1px * num !important
      .p{dir[0]}{num}
        padding-{dir[1]}: 1px * num !important

  distance2 = 100 200 300 400
  direction2 = w 'width', h 'height', maxW 'max-width', maxH 'max-height', minW 'min-width', minH 'min-height'
  for num in distance2
    for dir in direction2
      .{dir[0]}{num}
        {dir[1]}: 1px * num !important
